@model SaludGest.DTOs.Medico.MedicoReadDTO

@{
    ViewData["Title"] = "Confirmar Eliminación de Médico";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-danger text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-center text-danger fw-bold">
                <i class="fas fa-exclamation-triangle"></i>
                ¿Estás seguro de que deseas eliminar a este médico?
            </h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Nombre):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.ApellidoPaterno):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.ApellidoPaterno)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.ApellidoMaterno):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.ApellidoMaterno)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.EspecialidadNombre):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.EspecialidadNombre)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.DepartamentoNombre):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.DepartamentoNombre)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Email):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Medico")" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" form="delete-form" class="btn btn-danger px-4 py-2 ms-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            </div>
        </div>
    </div>

    <form id="delete-form" method="post" action="@Url.Action("Delete", "Medico", new { id = Model.MedicoId })" class="d-none"></form>
</div>
