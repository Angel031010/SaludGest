@model SaludGest.DTOs.Cita.CitaReadDTO

@{
    ViewData["Title"] = "Confirmar Eliminación de Cita";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-center text-danger fw-bold">
                <i class="fas fa-exclamation-triangle"></i>
                ¿Estás seguro de que deseas eliminar esta cita?
            </h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.CitaId):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.CitaId)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.FechaHora):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.FechaHora)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.NombreMedico):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.NombreMedico)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.NombrePaciente):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.NombrePaciente)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Estado):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Estado)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Observaciones):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Observaciones)</dd>

                        <dt class="col-5 fw-bold">Activo:</dt>
                        <dd class="col-7">
                            @if (Model.Activo)
                            {
                                <span class="text-success"><i class="fas fa-check-circle"></i> Sí</span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="fas fa-times-circle"></i> No</span>
                            }
                        </dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.FechaCreacion):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Cita")" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" form="delete-form" class="btn btn-danger px-4 py-2 ms-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            </div>
        </div>
    </div>

    <form id="delete-form" method="post" action="@Url.Action("Delete", "Cita", new { id = Model.CitaId })" class="d-none">
        @Html.AntiForgeryToken()
    </form>
</div>
