@model IEnumerable<SaludGest.DTOs.Cita.CitaReadDTO>

@{
    ViewData["Title"] = "Cita";
    int num = 1;
}

<div class="container mt-4">
    <div class="row">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">@ViewData["Title"]</h1>

            <a href="@Url.Action("Create", "Cita")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Agregar Cita
            </a>
        </div>

        @await Html.PartialAsync("_Alerts")

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.FechaHora)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.NombreMedico)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.NombrePaciente)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Estado)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Observaciones)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Activo)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(num++)</th>
                            <td>@item.FechaHora.ToString("dd/MM/yyyy")</td>
                            <td>@item.NombreMedico</td>
                            <td>@item.NombrePaciente</td>
                            <td>@item.Estado</td>
                            <td>@item.Observaciones</td>

                            <td>
                                <i class="@(item.Activo ? "fas fa-check text-success" : "fas fa-times text-danger")"></i>
                            </td>
                            <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group">

                                    <a href="@Url.Action("Edit", "Cita", new { id = item.CitaId })"
                                       class="btn btn-sm btn-secondary m-2">
                                        <i class="fa-solid fa-pencil"></i> Editar
                                    </a>

                                    <a href="@Url.Action("Details", "Cita", new { id = item.CitaId })"
                                       class="btn btn-sm btn-info m-2">
                                        <i class="fa-solid fa-circle-info"></i> Detalles
                                    </a>

                                    <a href="@Url.Action("ConfirmDelete", "Cita", new { id = item.CitaId })"
                                       class="btn btn-sm btn-danger m-2">
                                        <i class="fa-solid fa-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>